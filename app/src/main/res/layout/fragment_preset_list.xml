<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/md_grey_200"
    tools:context="com.leinardi.kitchentimer.ui.fragment.PresetListFragment">

    <com.leinardi.kitchentimer.ui.widget.EmptyRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/ic_preset_big"
        android:gravity="center"
        android:text="@string/preset_recyclerview_hint"
        android:textColor="@color/md_grey_500"
        android:textSize="24dp" />
</FrameLayout>