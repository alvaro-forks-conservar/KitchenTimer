<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.SlidingPaneLayout
        android:id="@+id/sliding_pane_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/preset_list_fragment"
            class="com.leinardi.kitchentimer.ui.fragment.PresetListFragment"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_preset_list" />

        <fragment
            android:id="@+id/countdown_list_fragment"
            class="com.leinardi.kitchentimer.ui.fragment.CountdownListFragment"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_countdown_list" />

    </android.support.v4.widget.SlidingPaneLayout>
</LinearLayout>